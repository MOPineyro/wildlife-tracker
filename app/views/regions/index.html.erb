<html>
<head>
  <title>Regions</title>
</head>
<body>
  <h1>Regions</h1>
  <ul>
    <% @regions.each do |region| %>
      <li><a href="/regions/<%= region.id %>"><%= region.name %></a></li>
    <% end %>
  </ul>
  <form action="/regions" method="post">
    <label for="region_name">Region Name </label>
    <input id="region_name" name="region[name]" type='text'>
    <button>Add Region</button>
  </form>
</body>
</html>
