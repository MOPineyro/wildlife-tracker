<h2> <%= @current_species.name %></h2>

<form action="/species/<%= @current_species.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="species_name">Species Name</label>
  <input id="species_name" name="species[name]" type="text" value="<%= @current_species.name %>">
  <button>Edit Species</button>
</form>
